	key <AE06> {[ U10B7D                 ]}; // ğ­½
	key <AE07> {[ U10B7E                 ]}; // ğ­¾
	key <AE08> {[ U10B7F                 ]}; // ğ­¿

	key <AD01> {[ U10B22,         U10B23 ]}; // ğ¬¢ ğ¬£
	key <AD02> {[ U10B33,         U10B34 ]}; // ğ¬³ ğ¬´
