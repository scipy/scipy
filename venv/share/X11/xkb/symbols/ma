    key <AD09>	{ [ 0x1002d44, 0x1002d5d ]	};
    key <AD10>	{ [ 0x1002d43, 0x1002d5e ]	};
    key <AD11>	{ [ 0x1002d6f, 0x1002d60 ]   };
    key <AD12>	{ [    dollar,   sterling,   currency ] };

    key <AC01>	{ [ 0x1002d47, 0x1002d48 ]	};
